{% comment %} section-list-collections {% endcomment %}

{% assign _s = section.settings %}


<!-- List collections -->
<div class="bg-gray-100 border-b-2 border-black">
  <div class="container mx-auto px-4 md:px-6">
    <div class="py-16 sm:py-24 lg:py-32">
      <h2 class="text-2xl font-extrabold text-gray-900">{{ _s.title }}</h2>

      <div class="mt-6 space-y-12 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-6 2xl:gap-10">
      {% for block in section.blocks %}
        {% assign _b = block.settings %}
        {% assign collection = collections[_b.collection] %}
        {% render 'category-card', collection: collection %}
      {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "List collections",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "List collections"
    }
  ]
}
{% endschema %}
